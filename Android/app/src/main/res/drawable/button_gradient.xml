<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#CC5500"
                android:centerColor="#CC3700"
                android:endColor="#992900" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#4DFF6B35" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FF6B35"
                android:centerColor="#FF4500"
                android:endColor="#CC3700" />
            <corners android:radius="14dp" />
        </shape>
    </item>

</selector>