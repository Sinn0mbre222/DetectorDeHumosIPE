<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme for Fire Alert -->
    <style name="Theme.FireAlert" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_amber</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>
    </style>

    <!-- Login Activity Theme -->
    <style name="Theme.FireAlert.Login" parent="Theme.FireAlert">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

</resources>