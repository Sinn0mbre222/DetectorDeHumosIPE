<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Alerts">

    <!-- ========== TOP BAR ========== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón Atrás -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_button_background"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="ALERTAS"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toStartOf="@id/btnFilter"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <!-- Botón Filtrar -->
        <FrameLayout
            android:id="@+id/btnFilter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icon_button_background"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_filter"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ========== FILTER TABS ========== -->

    <HorizontalScrollView
        android:id="@+id/filterTabsScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <!-- Tab Todas -->
            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selected_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Todas"
                android:textColor="#FF6B35"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- Tab Peligro -->
            <TextView
                android:id="@+id/tabDanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/tab_unselected_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Peligro"
                android:textColor="#80FFFFFF"
                android:textSize="13sp" />

            <!-- Tab Advertencia -->
            <TextView
                android:id="@+id/tabWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/tab_unselected_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Advertencia"
                android:textColor="#80FFFFFF"
                android:textSize="13sp" />

            <!-- Tab Resueltas -->
            <TextView
                android:id="@+id/tabResolved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/tab_unselected_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Resueltas"
                android:textColor="#80FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ========== MAIN CONTENT ========== -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterTabsScroll">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- ========== SUMMARY CARD ========== -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvSummaryTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Resumen de Alertas"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tvSummaryTitle">

                        <!-- Alertas Críticas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCriticalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="#FF5252"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Críticas"
                                android:textColor="#80FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Separador -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:background="#33FFFFFF" />

                        <!-- Alertas Advertencia -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWarningCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="#FFB74D"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Advertencias"
                                android:textColor="#80FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Separador -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:background="#33FFFFFF" />

                        <!-- Alertas Resueltas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvResolvedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="#4CAF50"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Resueltas"
                                android:textColor="#80FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========== TODAY SECTION ========== -->

            <TextView
                android:id="@+id/tvTodayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.1"
                android:text="HOY"
                android:textColor="#FF6B35"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSummary" />

            <!-- Alert Item 1 - Crítica -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alertItem1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTodayLabel">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/alertIcon1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/alert_icon_bg_danger"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_fire"
                            app:tint="#FF5252"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvAlertTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="¡Incendio detectado!"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge1"
                        app:layout_constraintStart_toEndOf="@id/alertIcon1"
                        app:layout_constraintTop_toTopOf="@id/alertIcon1" />

                    <TextView
                        android:id="@+id/tvAlertLocation1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Sensor salon - Humo detectado"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge1"
                        app:layout_constraintStart_toEndOf="@id/alertIcon1"
                        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle1" />

                    <TextView
                        android:id="@+id/alertBadge1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_danger_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Crítica"
                        android:textColor="#FF5252"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAlertTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Hace 15 minutos"
                        android:textColor="#4DFFFFFF"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvAlertTitle1"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon1" />

                    <TextView
                        android:id="@+id/tvAlertAction1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/action_button_background"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"
                        android:text="Ver detalles"
                        android:textColor="#FF6B35"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Alert Item 2 - Advertencia -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alertItem2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertItem1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/alertIcon2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/alert_icon_bg_warning"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_warning"
                            app:tint="#FFB74D"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvAlertTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Temperatura elevada"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge2"
                        app:layout_constraintStart_toEndOf="@id/alertIcon2"
                        app:layout_constraintTop_toTopOf="@id/alertIcon2" />

                    <TextView
                        android:id="@+id/tvAlertLocation2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Sensor Cocina - 45°C detectados"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge2"
                        app:layout_constraintStart_toEndOf="@id/alertIcon2"
                        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle2" />

                    <TextView
                        android:id="@+id/alertBadge2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_warning_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Advertencia"
                        android:textColor="#FFB74D"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAlertTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Hace 2 horas"
                        android:textColor="#4DFFFFFF"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvAlertTitle2"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon2" />

                    <TextView
                        android:id="@+id/tvAlertAction2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/action_button_background"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"
                        android:text="Ver detalles"
                        android:textColor="#FF6B35"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========== YESTERDAY SECTION ========== -->

            <TextView
                android:id="@+id/tvYesterdayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.1"
                android:text="AYER"
                android:textColor="#FF6B35"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertItem2" />

            <!-- Alert Item 3 - Resuelta -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alertItem3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvYesterdayLabel">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/alertIcon3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/alert_icon_bg_success"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#4CAF50"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvAlertTitle3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Incendio controlado"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge3"
                        app:layout_constraintStart_toEndOf="@id/alertIcon3"
                        app:layout_constraintTop_toTopOf="@id/alertIcon3" />

                    <TextView
                        android:id="@+id/tvAlertLocation3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Zona Sur - Área Industrial"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge3"
                        app:layout_constraintStart_toEndOf="@id/alertIcon3"
                        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle3" />

                    <TextView
                        android:id="@+id/alertBadge3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_success_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Resuelta"
                        android:textColor="#4CAF50"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAlertTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Ayer, 14:30"
                        android:textColor="#4DFFFFFF"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvAlertTitle3"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon3" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Alert Item 4 - Resuelta -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alertItem4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertItem3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/alertIcon4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/alert_icon_bg_success"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#4CAF50"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvAlertTitle4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Humo dispersado"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge4"
                        app:layout_constraintStart_toEndOf="@id/alertIcon4"
                        app:layout_constraintTop_toTopOf="@id/alertIcon4" />

                    <TextView
                        android:id="@+id/tvAlertLocation4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Sensor Sala - Falsa alarma"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge4"
                        app:layout_constraintStart_toEndOf="@id/alertIcon4"
                        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle4" />

                    <TextView
                        android:id="@+id/alertBadge4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_success_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Resuelta"
                        android:textColor="#4CAF50"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAlertTime4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Ayer, 09:15"
                        android:textColor="#4DFFFFFF"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvAlertTitle4"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon4" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========== LAST WEEK SECTION ========== -->

            <TextView
                android:id="@+id/tvLastWeekLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.1"
                android:text="ÚLTIMA SEMANA"
                android:textColor="#FF6B35"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertItem4" />

            <!-- Alert Item 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alertItem5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLastWeekLabel">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/alertIcon5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/alert_icon_bg_success"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#4CAF50"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvAlertTitle5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Mantenimiento completado"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge5"
                        app:layout_constraintStart_toEndOf="@id/alertIcon5"
                        app:layout_constraintTop_toTopOf="@id/alertIcon5" />

                    <TextView
                        android:id="@+id/tvAlertLocation5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Todos los sensores verificados"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@id/alertBadge5"
                        app:layout_constraintStart_toEndOf="@id/alertIcon5"
                        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle5" />

                    <TextView
                        android:id="@+id/alertBadge5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_info_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Info"
                        android:textColor="#64B5F6"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAlertTime5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Hace 5 días"
                        android:textColor="#4DFFFFFF"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvAlertTitle5"
                        app:layout_constraintTop_toBottomOf="@id/alertIcon5" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- ========== BOTTOM NAVIGATION ========== -->

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="#80FFFFFF"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/textInicio"
                    android:textColor="#80FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Devices -->
            <LinearLayout
                android:id="@+id/navDevices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_devices"
                    app:tint="#80FFFFFF"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/textDispositivos"
                    android:textColor="#80FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Alerts - Activo -->
            <LinearLayout
                android:id="@+id/navAlerts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    app:tint="#FF6B35"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/textAlertas"
                    android:textColor="#FF6B35"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="#80FFFFFF"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/textPerfil"
                    android:textColor="#80FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>